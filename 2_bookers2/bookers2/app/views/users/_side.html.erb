    <!--user info, new book-->
    <div class = "col-md-3">

      <h2>User info</h2>
      <!--画像を入れる-->

      <table class = "table" >
        <tbody>
          <tr>
            <th>name</th>
            <th>user.name</th>
          </tr>
          <tr>
            <th>introduction</th>
            <th>user.introduction</th>
          </tr>
        </tbody>
      </table>
      <div class = "row" >
        <a class = "btn btn-outline-secondary btn-block fas fa-user-cog" href = "/users/:id/edit" ></a>
      </div>


      <h2 class = "mt-3">NEW book</h2>

      <%= form_with model: book, local:true do |f| %>
        <div class = "form-group" >
          <label>Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class = "form-group" >
          <label>Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class = "form-group" >
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>