<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white">
      <nav class = "navbar navbar-expand-lg navbar-dark bg-dark">
        <div class = "container" >

          <a class = "navbar-band text-light" href = "/">
            <span>Bookers</span>
          </a>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to user_path(current_user.id) do %>
                    <i class="fas fa-home text-light"></i> Home
                    <!--<p style="display: inline-block;" >Home</p>-->
                  <% end %>
                </li>
                  <!--<a class="fas fa-home" href="/">Home</a>-->
                  <!--<a class = 'fas fa-home nav-link text-light' href = "/">Home</a>-->
                  <!--<%#= link_to "Home", user_path(current_user.id) %>-->
                  <!--, class: 'fas fa-home nav-link text-light' %>-->

                <li>
                <li>
                  <%= link_to users_path do %>
                    <i class="fas fa-users text-light"></i> Users
                    <!--<p style="display: inline-block;" >Users</p>-->
                  <% end %>
                </li>
                <li>
                  <%= link_to books_path do %>
                    <i class="fas fa-book-open text-light"></i> Books
                    <!--<p style="display: inline-block;" >Books</p>-->
                  <% end %>
                </li>
                  <!--<%#= link_to "Books", books_path %>-->
                  <!--, class: 'fas fa-book nav-link text-light' %>-->
                <li>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <i class="fas fa-sign-out-alt text-light"></i> Log out
                    <!--<p style="display: inline-block;" >Log out</p>-->
                  <% end %>
                </li>
                <!--<%#= link_to "Log out", destroy_user_session_path, method: :delete %>-->
                <!--class: 'fas fa-sign-out-alt nav-link text-light' %>-->
              <% else %>
                <li>
                  <%= link_to root_path do %>
                    <i class="fas fa-home text-light"></i> Home
                    <!--<p style="display: inline-block;,color:#fff;" >Home</p>-->
                  <% end %>
                </li>
                  <!--<%#= link_to "Home", "/" %>-->
                  <!--, class: 'fas fa-home nav-link text-light' %>-->
                <li>
                  <%= link_to about_path do %>
                    <i class="fas fa-link text-light"></i> About
                    <!--<p style="display: inline-block;" >About</p>-->
                  <% end %>
                </li>
                  <!--<%#= link_to "About", about_path %>-->
                  <!--, class: 'fas fa-link nav-link text-light' %>-->
                <li>
                  <%= link_to new_user_registration_path do %>
                    <i class="fas fa-user-plus text-light"></i> Sign up
                    <!--<p style="display: inline-block;" >Sign up</p>-->
                  <% end %>
                </li>
                  <!--<%#= link_to "Sign up", new_user_registration_path %>-->
                  <!--, class: 'fas fa-user-plus nav-link text-light' %>-->
                <li>
                  <%= link_to new_user_session_path do %>
                    <i class="fas fa-sign-in-alt text-light"></i> Log in
                    <!--<p style="display: inline-block;" >Log in</p>-->
                  <% end %>
                  <!--<%#= link_to "Log in", new_user_session_path %>-->
                  <!--, class: 'fas fa-sign-in-alt nav-link text-light' %>-->
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer>
      <div class = "container mt-5">
        <div class = "row" >
          <div class = "mx-auto" >
            <p>CopyRigth Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
