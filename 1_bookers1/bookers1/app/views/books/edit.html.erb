 <!-- form_with部分 -->
 <%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
 <div>
   <label>Title</label><br>
   <%= f.text_field :title %>
 </div>
 <div>
   <label>Body</label><br>
   <%= f.text_area :body %>
 </div>
 <div>
   <%= f.submit "Update Book" %>
 </div>
 
  <% end %>

