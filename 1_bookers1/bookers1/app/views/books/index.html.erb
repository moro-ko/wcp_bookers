<!-- 一覧画面 -->
<h1>Books</h1>

<!-- tableタグを利用 -->
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>body</th>
        </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
  
            <!-- 詳細画面への遷移 -->
            <td><%= link_to "Show", "books/:id" %></td>
            <!-- 編集画面への遷移 -->
            <td><%= link_to "Edit", "books/:id/edit" %></td>
            <!-- 削除画面 -->
            <td><%= link_to "Destroy", "books" %></td>
        <% end %>
    </tbody>
</table>


<!-- 新規投稿画面 -->
<h2>New book</h2>
 <!-- form_with部分 -->
 <%= form_with model: Book.new, local:true do |f| %>

   <h4>Title</h4>
   <%= f.text_field :title %>
   
   <h4>Body</h4>
   <%= f.text_area :body %>
   
   <%= f.submit "Create Book" %>
   
  <% end %>
